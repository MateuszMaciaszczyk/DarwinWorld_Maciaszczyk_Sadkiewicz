<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="800.0"
            fx:controller="world.presenter.SimulationPresenter">
    <left>
        <VBox alignment="CENTER">
            <Label fx:id="dayLabel" />
            <Label fx:id="animalCountLabel" />
            <Label fx:id="grassCountLabel" />
            <Label fx:id="freeSpaceCountLabel" />
            <Label fx:id="mostPopularGeneLabel" />
            <Label fx:id="averageEnergyLabel" />
            <Label fx:id="averageLifeLengthLabel" />
            <Label fx:id="averageChildrenCountLabel" />
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER">
            <Button fx:id="startStopButton" text="Start" onAction="#onStartStopClicked" />
            <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER"  />
        </VBox>
    </center>
</BorderPane>